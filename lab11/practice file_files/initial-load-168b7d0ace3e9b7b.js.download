<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shell Game</title>
  <style>
    .container {
      display: flex;
      justify-content: space-around;
      margin: 20px;
    }
    .container img {
      width: 100px;
      height: 100px;
      cursor: pointer;
    }
  </style>
</head>
<body onload="ShuffleShells();">
  <h1>Shell Game</h1>

  <div class="container">
    <img id="first" src="walnut1.jpg" alt="Walnut 1" onclick="WinnerMessage();">
    <img id="second" src="walnut2.jpg" alt="Walnut 2" onclick="TryAgain();">
    <img id="third" src="walnut3.jpg" alt="Walnut 3" onclick="TryAgain();">
  </div>

  <div id="message"></div>

  <script>
    // Winner Message function
    function WinnerMessage() {
      document.getElementById('message').innerHTML = 'You Won!';
    }

    // Try Again Message function
    function TryAgain() {
      document.getElementById('message').innerHTML = 'Wrong Shell - Try Again';
    }

    // Shuffle Shells function to randomize order
    function ShuffleShells() {
      var randomOrder = Math.floor(Math.random() * 3) + 1; // Random number between 1 and 3
      document.getElementById('first').style.order = randomOrder;
    }
  </script>
</body>
</html>
